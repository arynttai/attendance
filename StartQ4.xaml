<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="AC.StartQ4"
    BackgroundColor="White"
    NavigationPage.HasBackButton="false">

    <Grid Padding="20" RowDefinitions="Auto,*,Auto">

        <!-- Лого -->
        <Image
            Source="aitu_logo.png"
            WidthRequest="180"
            HeightRequest="130"
            HorizontalOptions="Center"
            VerticalOptions="Start"
            Grid.Row="0"/>

        <!-- Центральный контент -->
        <StackLayout Grid.Row="1" VerticalOptions="Center" HorizontalOptions="Center" Spacing="20">
            <!-- Текст успеха -->
            <Label 
                Text="Authentication Completed Successfully!"
                FontSize="14"
                
                FontAttributes="Bold"
                TextColor="#828282"
                Margin="0,-50,0,0"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"/>

            <!-- Иконка успеха -->
            <Image
                Source="check_circle.png"
                WidthRequest="40"
                HeightRequest="40"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </StackLayout>

        <!-- Кнопка -->
        <Button 
            Text="Start"
            Clicked="OnStartClicked"
            WidthRequest="320"
            HeightRequest="42"
            BackgroundColor="#007AFF"
            CornerRadius="16"
            FontSize="11"
            HorizontalOptions="Center"
            VerticalOptions="End"
            Grid.Row="2"
            Margin="0,0,0,20"/>
    </Grid>
</ContentPage>
